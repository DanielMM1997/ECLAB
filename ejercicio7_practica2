.global _start
_start:
		movia sp, 0x007FFFFC
		movia r2, 0x10002000
		movia r6, 0x10000050
		movi r3, 50000000
		movi r4, 0b1110
		stwio r4, 8(r2)
		sth r3, 8(r2)
		srli r3, r3, 16
		sth r3, 12(r2)
		addi r4, r0, 0b0111
		sth r4, 4(r2)
		movi r6, 0b010
		wrctl ienable, r6
		movi r6, 1
		wrctl status, r6
IDLE:		br IDLE
		
		movia r5, 0x10000000
		ldwio r7, 0(r5)
		stwio 
